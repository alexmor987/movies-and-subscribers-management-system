<script src="https://kit.fontawesome.com/b789d2f351.js" crossorigin="anonymous"></script>
<link rel='stylesheet' href='/stylesheets/login.css' />
    <title>Login</title>
  </head>
  <body>
    
    <div class="wrapper fadeInDown">
      <h1>Login</h1>
      <div id="formContent">
        <!-- Tabs Titles -->
    
        <!-- Icon -->
        <div class="fadeIn first">
         <div class="icon"><p><i class="far fa-user-circle" id="icon"></i></p> </div>
        </div>
    
        <!-- Login Form -->
        <form action="/login"  class="login" method="POST">
          <input type="text" id="login" class="fadeIn second" placeholder="Username" name="username" required>
          <input type="text" id="password" class="fadeIn third" placeholder="Password" name="password" required>
          <input type="submit" class="fadeIn fourth" value="Log In">
        </form>
    
        <!-- Create new account -->
        <div id="formFooter">
          New User?<a class="underlineHover" href="/login/createAccount">: Create account</a>
        </div>
        <% if(msg != '') { %>

          <div class="alert alert-success alert-dismissible fade show mt-2" role="alert">
            <p> <b><%= msg %></b></p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
        </div>
     
        
    <% } %>
      </div>
    </div>



       
      </div>
  </div>
</div>
  </body>
</html>
